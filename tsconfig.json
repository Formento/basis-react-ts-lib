{
	"compilerOptions": {
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react",
		"module": "ESNext",
		"sourceMap": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"dist",
		"node_modules",
		"stories",
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx"
	]
}